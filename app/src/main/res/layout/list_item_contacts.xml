<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/list_item_contacts_height">

    <ImageView
        android:id="@+id/profile"
        android:layout_width="@dimen/list_item_contacts_height"
        android:layout_height="@dimen/list_item_contacts_height"
        android:layout_alignParentLeft="true"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>

    <ImageView
        android:id="@+id/color_bar"
        android:layout_width="13dp"
        android:layout_height="@dimen/list_item_contacts_height"
        android:layout_toRightOf="@id/profile"
        android:background="@color/alizarin"/>

    <RelativeLayout
        android:id="@+id/info_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_item_contacts_height"
        android:layout_toRightOf="@id/color_bar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingLeft="@dimen/activity_horizontal_margin">

            <TextView
                android:id="@+id/friend_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="simon wang"
                android:textColor="@color/black"
                android:textSize="19sp"/>


            <TextView
                android:id="@+id/signature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="the warm smile if the quility"/>
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="6dp"
            android:layout_marginTop="6dp"
            android:text="6:00pm"
            android:textSize="16sp"/>

    </RelativeLayout>

</RelativeLayout>